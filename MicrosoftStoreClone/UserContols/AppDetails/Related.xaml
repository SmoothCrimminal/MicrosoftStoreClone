<UserControl x:Class="MicrosoftStoreClone.UserContols.AppDetails.Related"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrosoftStoreClone.UserContols.AppDetails"
             xmlns:uc="clr-namespace:MicrosoftStoreClone.UserContols"
             mc:Ignorable="d"
             Name="RelatedUserControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Width="{Binding ElementName=RelatedUserControl, Path=ActualWidth}"
        Background="#2E2E2E">

        <Label FontSize="25" Content="Top Free Apps" Margin="10" Foreground="White"/>
        <uc:AppsViewer></uc:AppsViewer>
        <Label FontSize="25" Content="Top Free Games" Margin="10" Foreground="White"/>
        <uc:AppsViewer></uc:AppsViewer>
        <Label FontSize="25" Content="Similar Apps" Margin="10" Foreground="White"/>
        <uc:AppsViewer></uc:AppsViewer>
    </StackPanel>
</UserControl>
